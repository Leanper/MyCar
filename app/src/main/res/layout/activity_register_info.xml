<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/icon_login_bg"
    android:orientation="vertical">

    <include layout="@layout/app_toolbar" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="15dp"
        android:orientation="vertical">

        <EditText
            android:id="@+id/et_nickname"
            android:layout_width="match_parent"
            android:layout_height="43dp"
            android:layout_marginBottom="15dp"
            android:background="@drawable/edit_bg"
            android:hint="请输入您的昵称"
            android:textColor="@color/colorEditTextFont"
            android:textColorHint="@color/colorEditTextFont"
            android:textSize="13sp" />


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="15dp">

            <TextView
                android:id="@+id/tv_birthdate"
                android:layout_width="match_parent"
                android:layout_height="43dp"
                android:layout_toLeftOf="@+id/tl_gender"
                android:background="@drawable/edit_bg"
                android:gravity="center"
                android:textColor="@color/colorEditTextFont"
                android:textSize="13sp" />

            <TableLayout
                android:id="@+id/tl_gender"
                android:layout_width="wrap_content"
                android:layout_height="43dp"
                android:layout_alignParentRight="true"
                android:layout_alignBottom="@+id/et_sms_code"
                android:layout_alignTop="@+id/et_sms_code"
                android:layout_marginLeft="50dp">

                <TableRow
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent">

                    <ImageView
                        android:id="@+id/iv_boy"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="20dp"
                        android:src="@mipmap/icon_boy_radio" />

                    <ImageView
                        android:id="@+id/iv_girl"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@mipmap/icon_girl_radio" />
                </TableRow>
            </TableLayout>
        </RelativeLayout>

        <EditText
            android:id="@+id/et_pwd"
            android:layout_width="match_parent"
            android:layout_height="43dp"
            android:layout_marginBottom="15dp"
            android:background="@drawable/edit_bg"
            android:hint="添加登录密码"
            android:textColor="@color/colorEditTextFont"
            android:textColorHint="@color/colorEditTextFont"
            android:textSize="13sp" />

        <EditText
            android:id="@+id/et_confirm_pwd"
            android:layout_width="match_parent"
            android:layout_height="43dp"
            android:layout_marginBottom="15dp"
            android:background="@drawable/edit_bg"
            android:hint="重复输入密码"
            android:textColor="@color/colorEditTextFont"
            android:textColorHint="@color/colorEditTextFont"
            android:textSize="13sp" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="42dp"
            android:layout_marginBottom="40dp">

        </RelativeLayout>

        <Button
            android:id="@+id/btn_submit"
            android:layout_width="match_parent"
            android:layout_height="42dp"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/button_selector"
            android:text="确认注册"
            android:textColor="@color/white"
            android:textSize="13sp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="15dp"
            android:orientation="horizontal">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:text="点击确认注册，即表示已同意"
                android:textSize="13sp" />
            <TextView
                android:id="@+id/tv_tiaokuan"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:text="《蹭个车服务条款》"
                android:textColor="@color/colorSub"
                android:textSize="13sp" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>